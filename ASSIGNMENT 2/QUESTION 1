#include <iostream>
using namespace std ;
class City
{
	
	public:
		int p;
	char name[40];
	void accept ();
	void display ();
	
};
void City :: accept ()
{
	cout<<"\nenter the name of city : ";
	cin>>name;
	cout<<"\nenter population of city : ";
	cin>>p;
}

int main ()
{
	City c[5];
	int i,max,maxp;
	for(i=0;i<5;i++)
	{
		c[i].accept();
	}
	
	max=c[0].p;
	maxp=0;
	for(i=1;i<5;i++)
	{
		if(max<c[i].p)
		{
			max=c[i].p;
			maxp=i;
		}
	}
	cout<<"maximum population is "<<max<<" in country "<<c[maxp].name; 
	
	
	return 0; 
}
